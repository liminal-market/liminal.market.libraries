{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "app/js",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "app/types",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "ts-node": {
    "files": true,
    "esm": true
  },
  "exclude": ["node_modules"],
  "files": ["src/main.ts", "./src/html.d.ts", "./src/global.d.ts"],
  "compileOnSave": true
}
